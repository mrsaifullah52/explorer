{
  "name": "clockwork-xyz",
  "version": "0.0.2",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "description": "Dashboard for exploring and managing Clockwork automations",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:sdk": "tsc -p packages/sdk && cp -r packages/sdk dist",
    "publish:sdk": "npm publish ./dist/sdk --access public",
    "ci:version:sdk:patch": "cd packages/sdk && yarn version --patch --no-git-tag-version && cd ../.. && yarn version --patch --no-git-tag-version",
    "diff:sdk": "sh ./sdk-affected.sh",
    "start": "next start",
    "lint": "next lint",
    "test": "jest --watch",
    "cypress": "cypress open",
    "cypress:headless": "cypress run",
    "e2e": "start-server-and-test dev http://localhost:3000 cypress",
    "e2e:headless": "start-server-and-test dev http://localhost:3000 cypress:headless",
    "prettify": "prettier --write \"**/*.{ts,js,css,json,md}\""
  },
  "dependencies": {
    "@heroicons/react": "^1.0.5",
    "@project-serum/anchor": "^0.25.0",
    "@solana/wallet-adapter-base": "^0.9.19",
    "@solana/wallet-adapter-react": "^0.15.25",
    "@solana/wallet-adapter-react-ui": "^0.9.23",
    "@solana/wallet-adapter-wallets": "^0.19.7",
    "@solana/web3.js": "^1.50.1",
    "@tailwindcss/typography": "^0.5.7",
    "date-fns": "^2.29.2",
    "immer": "^9.0.16",
    "lodash": "^4.17.21",
    "next": "^13.0.6",
    "next-compose-plugins": "^2.2.1",
    "next-themes": "^0.2.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-responsive": "^9.0.2",
    "react-toastify": "^9.0.8",
    "react-tooltip": "^4.5.1",
    "short-uuid": "^4.2.2",
    "swr": "^1.3.0",
    "tw-elements": "^1.0.0-alpha12",
    "zustand": "^3.6.9"
  },
  "devDependencies": {
    "@babel/runtime": "7.x",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.2.2",
    "@types/node": "17.0.10",
    "@types/react": "18.0.1",
    "autoprefixer": "^10.4.2",
    "cypress": "^11.0.1",
    "cypress-browser-extension-plugin": "^0.1.0",
    "eslint": "8.7.0",
    "eslint-config-next": "13.0.7",
    "husky": "^8.0.2",
    "jest-environment-jsdom": "^29.3.1",
    "lint-staged": "^13.0.3",
    "next-transpile-modules": "^10.0.0",
    "postcss": "^8.4.5",
    "prettier": "^2.7.1",
    "start-server-and-test": "^1.14.0",
    "tailwindcss": "^3.2.1",
    "typescript": "4.9.3"
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "npx prettier --write",
      "npx eslint --fix"
    ]
  }
}
